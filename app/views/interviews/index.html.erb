<p id="notice"><%= notice %></p>

<h1>Interview Schedules</h1>

<table>
  <thead>
    <tr>
      <th>Interview Date</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th colspan="2">Interviewer Detail</th>
      <th colspan="2">Candidate Detail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @interviews.each do |interview| %>

      <tr>
        <td> <%= interview.interview_date.strftime("%d %B %Y") %> </td>
        <td> <%= interview.start_time.strftime("%I:%M %p") %> </td>
        <td> <%= interview.end_time.strftime("%I:%M %p") %> </td>
        <td> <%= interview.interviews_users.where(:role => 0).first.user.name %> </td>
        <td> <%= interview.interviews_users.where(:role => 0).first.user.email %> </td>
        <td> <%= interview.interviews_users.where(:role => 1).first.user.name %> </td>
        <td> <%= interview.interviews_users.where(:role => 1).first.user.email %> </td>
        <td> <%= link_to 'show', interview_path(interview) %>
        <td> <%= link_to 'edit', edit_interview_path(interview) %> </td>
        <td> <%= link_to 'delete', interview_path(interview), method: :delete, data: { confirm: "sure?" } %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Interview Schedule', new_interview_path %>
